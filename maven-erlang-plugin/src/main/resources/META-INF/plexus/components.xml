<?xml version="1.0" encoding="UTF-8"?>
<component-set>
  <components>
    <!-- applications (erlang-otp) -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>erlang-otp</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <classifier></classifier>
        <extension>erlang-otp</extension>
        <type>erlang-otp</type>
        <packaging>erlang-otp</packaging>
        <language>erlang</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>erlang-otp</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate></validate>
              <initialize>eu.lindenbaum:maven-erlang-plugin:initialize</initialize>
              <generate-sources>eu.lindenbaum:maven-erlang-plugin:extract-dependencies</generate-sources>
              <process-sources></process-sources>
              <generate-resources>eu.lindenbaum:maven-erlang-plugin:generate-resources</generate-resources>
              <process-resources></process-resources>
              <compile>eu.lindenbaum:maven-erlang-plugin:compile</compile>
              <process-classes></process-classes>
              <generate-test-sources>eu.lindenbaum:maven-erlang-plugin:test-initialize</generate-test-sources>
              <process-test-sources></process-test-sources>
              <generate-test-resources>eu.lindenbaum:maven-erlang-plugin:generate-test-resources</generate-test-resources>
              <process-test-resources></process-test-resources>
              <test-compile>eu.lindenbaum:maven-erlang-plugin:test-compile</test-compile>
              <process-test-classes></process-test-classes>
              <test>eu.lindenbaum:maven-erlang-plugin:test</test>
              <prepare-package>eu.lindenbaum:maven-erlang-plugin:dialyzer</prepare-package>
              <package>eu.lindenbaum:maven-erlang-plugin:package</package>
              <verify></verify>
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>

    <!-- applications (erlang-std) -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>erlang-std</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <classifier></classifier>
        <extension>erlang-std</extension>
        <type>erlang-std</type>
        <packaging>erlang-std</packaging>
        <language>erlang</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>erlang-std</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate></validate>
              <initialize>eu.lindenbaum:maven-erlang-plugin:initialize</initialize>
              <generate-sources>eu.lindenbaum:maven-erlang-plugin:extract-dependencies</generate-sources>
              <process-sources></process-sources>
              <generate-resources>eu.lindenbaum:maven-erlang-plugin:generate-resources</generate-resources>
              <process-resources></process-resources>
              <compile>eu.lindenbaum:maven-erlang-plugin:compile</compile>
              <process-classes></process-classes>
              <generate-test-sources>eu.lindenbaum:maven-erlang-plugin:test-initialize</generate-test-sources>
              <process-test-sources></process-test-sources>
              <generate-test-resources>eu.lindenbaum:maven-erlang-plugin:generate-test-resources</generate-test-resources>
              <process-test-resources></process-test-resources>
              <test-compile>eu.lindenbaum:maven-erlang-plugin:test-compile</test-compile>
              <process-test-classes></process-test-classes>
              <test>eu.lindenbaum:maven-erlang-plugin:test</test>
              <prepare-package>eu.lindenbaum:maven-erlang-plugin:dialyzer</prepare-package>
              <package>eu.lindenbaum:maven-erlang-plugin:package</package>
              <verify></verify>
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>

    <!-- releases (erlang-rel) -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>erlang-rel</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <classifier></classifier>
        <extension>erlang-rel</extension>
        <type>erlang-rel</type>
        <packaging>erlang-rel</packaging>
        <language>erlang</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>erlang-rel</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate></validate>
              <initialize>eu.lindenbaum:maven-erlang-plugin:initialize</initialize>
              <generate-sources>eu.lindenbaum:maven-erlang-plugin:extract-dependencies</generate-sources>
              <process-sources></process-sources>
              <generate-resources>eu.lindenbaum:maven-erlang-plugin:generate-release-resources</generate-resources>
              <process-resources></process-resources>
              <compile>eu.lindenbaum:maven-erlang-plugin:dialyzer-release</compile>
              <generate-test-sources></generate-test-sources>
              <process-test-sources></process-test-sources>
              <generate-test-resources></generate-test-resources>
              <process-test-resources></process-test-resources>
              <test-compile></test-compile>
              <process-test-classes></process-test-classes>
              <test>eu.lindenbaum:maven-erlang-plugin:test-release</test>
              <prepare-package></prepare-package>
              <package>eu.lindenbaum:maven-erlang-plugin:package-release</package>
              <verify></verify>
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.plexus.archiver.UnArchiver</role>
      <role-hint>erlang-rel</role-hint>
      <!-- there is no implementaion of ErlangRelUnArchiver, but TarGZipUnArchive will do the job -->
      <implementation>org.codehaus.plexus.archiver.tar.TarGZipUnArchiver</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>
    
  </components>
</component-set>
